<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/nombre_usuario"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txt_nombre_hotel2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Punuacion"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_tipo_habitacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="habitacion, adultos"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_adultos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="adultos,camas"
            android:textAlignment="textStart"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_fecha_entr_sal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fechaEntradaSalida"
            android:textAlignment="textStart"
            android:textSize="12sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/txt_precio"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:includeFontPadding="false"
        android:paddingTop="25dp"
        android:text="Precio"
        android:textAlignment="textEnd"
        android:textColor="@color/X_verde_shrek"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>