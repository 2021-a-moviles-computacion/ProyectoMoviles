<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_linear"

    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="44dp"
            android:orientation="horizontal">

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mate_sc"
            android:includeFontPadding="true"
            android:text="MyRoom"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/X_celeste_pero_azulado"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:includeFontPadding="true"
            android:letterSpacing="0.35"
            android:text="BEST HOTEL ROOM RECOMENDATIONS APP"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/X_celeste_pero_azulado"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="142dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="104dp"
                android:layout_height="55dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/txtUsuario"
                android:layout_width="259dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_border_txt"
                android:ems="10"
                android:hint="Usuario o Correo"
                android:includeFontPadding="false"
                android:inputType="textPersonName|textEmailSubject"
                android:paddingLeft="50px"
                android:textAlignment="viewStart"
                android:textColor="@color/X_celeste_pero_azulado"
                android:textColorHint="@color/X_celeste_pero_azulado"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="111dp"
                android:layout_height="54dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="104dp"
                android:layout_height="55dp"
                android:layout_weight="1" />

            <EditText
                android:id="@+id/txt_clave"
                android:layout_width="259dp"
                android:layout_height="55dp"
                android:background="@drawable/rounded_border_txt"
                android:ems="10"
                android:hint="Clave"
                android:includeFontPadding="false"
                android:inputType="textPersonName|textEmailSubject"
                android:paddingLeft="50px"
                android:textAlignment="viewStart"
                android:textColor="@color/X_celeste_pero_azulado"
                android:textColorHint="@color/X_celeste_pero_azulado"
                android:textSize="16sp"
                android:textStyle="italic" />

            <Space
                android:layout_width="111dp"
                android:layout_height="54dp"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/X_verde_claro_como_sus_ojos"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textColor="@color/X_verde_shrek" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/X_durazno_Peach_para_los_compas"
                android:text="Salir"
                android:textAllCaps="false"
                android:textColor="@color/X_cafe_Con_Pan" />

            <Space
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="80px"
            android:text="No tienes cuenta? Registrate"
            android:textAlignment="viewEnd"
            android:textStyle="italic" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>