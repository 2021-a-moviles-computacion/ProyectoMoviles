<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@drawable/nombre_usuario"
    android:padding="5dp">

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="301dp"
      android:layout_height="157dp"
      android:layout_weight="1"
      app:srcCompat="@drawable/ic_action_name" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:orientation="vertical">

    <TextView
        android:id="@+id/txt_nombre_hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mate_sc"
        android:text="NombreTexto"
        android:textColor="@color/X_azul_intenso_como_tu_ex"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_direccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_nombre_hotel2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punuacion"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_habitacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NombreTipoHabitacion"
        android:textAlignment="textEnd"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fecha_ectr_sal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="camas"
        android:textAlignment="textEnd"
        android:textColor="@color/X_cafe_Con_Pan"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_adultos_noches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="adultos noches"
        android:textAlignment="textEnd"
        android:textColor="@color/X_celeste_pero_azulado"
        android:textSize="12sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txt_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textAlignment="textEnd"
        android:textColor="@color/X_verde_shrek"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_tipo_pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="tipo de pago"
        android:textAlignment="textEnd"
        android:textColor="@color/X_celeste_pero_azulado"
        android:textSize="12sp"
        android:textStyle="italic" />

  </LinearLayout>
</LinearLayout>