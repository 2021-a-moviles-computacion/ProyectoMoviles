<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiente_linear"
    tools:context=".ListaDeHoteles">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/gradiente_horizontal"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_menu_24" />

            <TextView
                android:id="@+id/Title"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/mate_sc"
                android:includeFontPadding="true"
                android:paddingLeft="20dp"
                android:text="MyRoom"
                android:textAlignment="viewStart"
                android:textAllCaps="false"
                android:textColor="@color/X_celeste_pero_azulado"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_person_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/X_calcibondk"
            android:orientation="horizontal"
            android:padding="5dp">

            <SearchView
                android:layout_width="319dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border_txt" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_tune_24" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:orientation="vertical"


            >

            <Button
                android:id="@+id/button4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#951F35A5"
                android:text="Ingresar con Facebook"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#E4E35B43"
                android:text="Ingresar con Google"
                android:textAllCaps="false"
                android:textSize="16sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/X_verde_claro_como_sus_ojos"
                android:hapticFeedbackEnabled="false"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textColor="@color/X_verde_shrek"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:strokeColor="@color/X_verde_shrek"
                app:strokeWidth="2px" />

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/button2"
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/X_durazno_Peach_para_los_compas"
                android:text="Salir"
                android:textAllCaps="false"
                android:textColor="@color/X_cafe_Con_Pan"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="15dp"
                app:strokeColor="@color/X_cafe_Con_Pan"
                app:strokeWidth="2px" />

            <Space
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="41dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingRight="80px"
            android:text="No tienes cuenta? Registrate"
            android:textAlignment="viewEnd"
            android:textStyle="italic" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>